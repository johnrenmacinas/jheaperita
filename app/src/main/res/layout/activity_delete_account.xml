<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteAccount">
    <include layout="@layout/header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Account Deletion"
            android:textColor="#FF000000"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/iconDelete"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/baseline_account_circle_24"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/delete_text"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete your account including data? \n You will not be able to access you account again! \n This action can't be undone."
            android:layout_below="@+id/iconDelete"
            android:layout_centerInParent="true"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/confirmDelete"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:text="Confirm Delete"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>

</LinearLayout>